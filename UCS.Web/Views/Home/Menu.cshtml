@model MenuViewModel
@using UCS.Web.ViewModels
@using UCS.Db.Entities

<div class="row">
    @if (Model.IsStudent)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 menu-box">
            <div class="opacity-box" onclick="document.location ='@Url.Action("Choose","Category")';">
                <h2>Wybór kategorii</h2>
            </div>
        </div>
    }
    @if (Model.Permission.Contains(PermissionEnum.SEND_EMAIL))
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 menu-box">
            <div class="opacity-box" onclick="document.location ='@Url.Action("Add","Message")';">
                <h2>Nowa wiadomość e-mail</h2>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 menu-box">
            <div class="opacity-box" onclick="document.location ='@Url.Action("Index","Message")';">
                <h2>Wysłane wiadomości e-mail</h2>
            </div>
        </div>
    }
    @if (Model.Permission.Contains(PermissionEnum.CATEGORIES))
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 menu-box">
            <div class="opacity-box" onclick="document.location ='@Url.Action("Index","Category")';">
                <h2>Kategorie wiadomości</h2>
            </div>
        </div>
    }
    @if (Model.Permission.Contains(PermissionEnum.STUDENTS))
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 menu-box">
            <div class="opacity-box" onclick="document.location ='@Url.Action("Index","Student")';">
                <h2>Studenci</h2>
            </div>
        </div>
    }
    @if (Model.Permission.Contains(PermissionEnum.USERS))
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 menu-box">
            <div class="opacity-box" onclick="document.location ='@Url.Action("Index","User")';">
                <h2>Pracownicy</h2>
            </div>
        </div>
    }
    @if (!Model.IsStudent)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 menu-box">
            <div class="opacity-box" onclick="document.location ='@Url.Action("ChangePassword","Manage")';">
                <h2>Zmień hasło</h2>
            </div>
        </div>
    }
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 menu-box">
        <div class="opacity-box" onclick="document.location ='@Url.Action("Logout","Account")';">
            <h2>Wyloguj</h2>
        </div>
    </div>
</div>